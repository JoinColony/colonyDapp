{
  "name": "colony-dapp",
  "private": true,
  "engines": {
    "node": "9.4.0",
    "yarn": "1.3.2"
  },
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.config.dev.js",
    "provision": "sh scripts/provision_submodules.sh",
    "build": "webpack-cli --config webpack.config.dev.js",
    "flow": "flow check",
    "flow:ci": "flow check --json | flow-junit-transformer > reports/flow/flow-results.xml",
    "lint": "eslint --fix 'src/**/*.{js,jsx}'",
    "lint:ci": "eslint --format junit -o 'reports/eslint/eslint-results.xml' 'src/**/*.{js,jsx}'",
    "scaffold": "plop",
    "stylelint": "stylelint --fix \"src/**/*.css\"",
    "stylelint:ci": "stylelint --custom-formatter './node_modules/stylelint-formatter-relative-junit' \"src/**/*.css\" > reports/stylelint/stylelint-results.xml",
    "test": "jest --config=jest.conf.json",
    "test:integration": "jest --runInBand --config=jest-integration.conf.json",
    "test:integration:watch": "WATCH=true yarn test:integration --watchAll",
    "test:integration:debug": "DEBUG=true yarn test:integration --color | tee integration-testing-output.log",
    "test:integration:ci": "jest --clearCache && NODE_ENV=test jest --ci --bail --verbose --runInBand --config=jest-integration.conf.json --testResultsProcessor='jest-junit'",
    "test:ci": "jest --clearCache && NODE_ENV=test jest --ci --coverage --verbose=true --config=jest.conf.json --testResultsProcessor='jest-junit'",
    "postinstall": "yarn provision"
  },
  "lint-staged": {
    "src/{,**/}*.{js|jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoinColony/colonyDapp.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
