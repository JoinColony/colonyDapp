    "scripts": {
        "dev": "webpack-dev-server --config webpack.config.js",
        "provision": "sh scripts/provision_submodules.sh",
        "build": "webpack-cli --config webpack.config.js",
        "flow": "flow check",
        "flow:ci": "flow check --json | flow-junit-transformer > reports/flow/flow-results.xml",
        "lint": "eslint --fix 'src/**/*.{js,jsx}' 'integration-testing/**/*.js'",
        "lint:ci": "eslint --format junit -o 'reports/eslint/eslint-results.xml' 'src/**/*.{js,jsx}' 'integration-testing/**/*.js'",
        "scaffold": "plop",
        "stylelint": "stylelint --fix \"src/**/*.css\"",
        "stylelint:ci": "stylelint --custom-formatter './node_modules/stylelint-formatter-relative-junit' \"src/**/*.css\" > reports/stylelint/stylelint-results.xml",
        "test": "jest --config=jest.conf.json",
        "test:integration": "jest --clearCache && jest --runInBand --config=jest-integration.conf.json",
        "test:integration:start-pinning": "yarn --cwd src/lib/pinningService start",
        "test:integration:ci:start-pinning": "yarn --cwd src/lib/pinningService start:integration:ci",
        "test:integration:watch": "WATCH=true yarn test:integration --watchAll",
        "test:integration:debug": "DEBUG=true yarn test:integration --color | tee integration-testing-output.log",
        "test:integration:ci": "jest --clearCache && NODE_ENV=test jest --ci --bail --verbose --runInBand --config=jest-integration.conf.json --reporters='jest-junit'",
        "test:ci": "jest --clearCache && NODE_ENV=test jest --ci --coverage --verbose=true --config=jest.conf.json --reporters='jest-junit'",
        "styleguide": "styleguidist server",
        "build:styleguide": "styleguidist build",
        "deploy:styleguide": "gh-pages -d styleguide -r git@github.com:JoinColony/colonyUI.git"
    },
