[ignore]
.*\.yalc
.*/__tests__/.*
.*/utils/test/.*
.*/src/lib/colonyNetwork/.*
.*/src/lib/pinion/.*
# We need to remove these as soon as they fixed flow support
.*/node_modules/findup/.*?\.json
.*/node_modules/oboe/.*?\.json
# https://github.com/facebook/draft-js/issues/1621
.*/node_modules/draft-js/lib/ContentBlock.js.flow
.*/node_modules/draft-js/lib/ContentBlockNode.js.flow
.*/node_modules/draft-js/lib/DraftEditor.react.js.flow
.*/node_modules/draft-js/lib/DraftEditorLeaf.react.js.flow
# https://github.com/atlassian/react-beautiful-dnd/issues/851
.*/node_modules/react-beautiful-dnd/.*
.*/node_modules/module-deps/.*

[include]
.*/src/.*

[libs]

[lints]

[options]
server.max_workers=16
module.ignore_non_literal_requires=true
module.name_mapper='redux-promise-listener' -> '@colony/redux-promise-listener'
module.name_mapper='^.*\.css$' -> 'css-module-flow'
module.name_mapper='^.*\.(svg)$' -> 'empty/string'
module.name_mapper='^\~context\/?\(.*\)$' -> '<PROJECT_ROOT>/src/context/\1'
module.name_mapper='^\~data\/?\(.*\)$' -> '<PROJECT_ROOT>/src/data/\1'
module.name_mapper='^\~lib\/?\(.*\)$' -> '<PROJECT_ROOT>/src/lib/\1'
module.name_mapper='^\~redux\/?\(.*\)$' -> '<PROJECT_ROOT>/src/redux/\1'
module.name_mapper='^\~utils\/?\(.*\)$' -> '<PROJECT_ROOT>/src/utils/\1'
module.name_mapper='^\~styles\/?\(.*\)$' -> '<PROJECT_ROOT>/src/styles/shared/\1'
module.name_mapper='^\~types\/?\(.*\)$' -> '<PROJECT_ROOT>/src/types/\1'
module.name_mapper='^\~routes' -> '<PROJECT_ROOT>/src/routes'
module.name_mapper='^\~immutable' -> '<PROJECT_ROOT>/src/immutable'
module.name_mapper='\~\([a-zA-Z0-9\-\_]+\)\/\(.*\)' -> '<PROJECT_ROOT>/src/modules/\1/components/\2'

[strict]
